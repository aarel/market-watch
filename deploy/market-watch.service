[Unit]
Description=Market Watch Trading Bot
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/market-watch
ExecStart=/opt/market-watch/.venv/bin/uvicorn server:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
User=marketwatch
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
